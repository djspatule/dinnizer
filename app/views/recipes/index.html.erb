<div class="container">
  <div class="row  col-xs-12 col-md-9 col-md-offset-1">
    <h1> All recipes </h1>
    
    <% @recipes.each do |recipe| %>
      <div class="product">
        <!--<div class='product-upvote'>
          <div class="product-arrow"></div>
          <div class='product-count'>0</div>
        </div>-->
        <% if recipe.recipe_photo? %>
          <%= cl_image_tag recipe.recipe_photo.path, class: "product-image hidden-xs" %>
        <% else %>
          <img src="recipe.jpg" class="product-image hidden-xs">
        <% end %>
        <div class='product-body'>
          <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
        </div>
        <ul class="list-inline hidden-sm hidden-xs">
          <li>
            <%= link_to recipe_path(recipe) do %>
              <i class="fa fa-eye"></i>
            <% end %>
          </li>
          <li>
            <%= link_to edit_recipe_path(recipe) do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </li>
          <li>
            <%= link_to recipe_path(recipe), method: :delete do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>

  </div>
</div>
