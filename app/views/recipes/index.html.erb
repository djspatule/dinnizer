<h1> All recipes </h1>

<% @recipes.each do |recipe| %>
  <div class="product">
    <div class='product-upvote'>
      <div class="product-arrow"></div>
      <div class='product-count'>0</div>
    </div>
    <img src="recipe.jpg" alt="recipe" class="product-image hidden-xs">
    <%= cl_image_tag 'sample.jpg' %>
    <div class='product-body'>
      <h3><%= recipe.name %></h3>
    </div>
    <ul class="list-inline product-controls hidden-sm hidden-xs">
      <li>
        <%= link_to recipe_path(recipe) do %>
          <i class="fa fa-eye"></i>
        <% end %>
      </li>
      <li>
        <%= link_to edit_recipe_path(recipe) do %>
          <i class="fa fa-pencil"></i>
        <% end %>
      </li>
      <li>
        <%= link_to recipe_path(recipe), method: :delete do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>
