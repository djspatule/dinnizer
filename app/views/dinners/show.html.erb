<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1><%= @dinner.dinner_date %></h1>
    <h3>you served the following: </h3>
    <% @dinner.recipes.each do |recipe| %>
      <p><%= link_to recipe.name, recipe_path(recipe) %></p>
    <% end %>
    <h3>And enjoyed it with: </h3>
    <% @dinner.guests.each do |guest| %>
      <p><%= link_to guest.first_name + " " + guest.last_name, guest_path(guest) %></p> 
    <% end %>
  </div>
</div>
